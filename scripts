chmod +x
/home/kioskuser/browser-autostart.sh
#!/bin/bash
firefox -url "https://radar.weather.gov/Conus/full_loop.php" &
sleep 3;
xdotool key "F11"

chmod +x
/home/kioskuser/.config/autostart/kiosk-autostart.desktop
[Desktop Entry]
Type=Application
Name=kiosk-autostart
Exec=/home/kioskuser/browser-autostart.sh

sudo yum -y install epel-release && rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm
sudo yum -y install xdotool
